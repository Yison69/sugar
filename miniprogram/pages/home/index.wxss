.page {
  padding-bottom: 24rpx;
}

.sticky {
  position: sticky;
  top: 0;
  z-index: 20;
  background: #f7f8fa;
}

.panel {
  margin: 24rpx;
  padding: 22rpx;
  background: #ffffff;
  border-radius: 28rpx;
  border: 2rpx solid rgba(17, 24, 39, 0.06);
}

.panelTitle {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.catScroll {
  margin-top: 16rpx;
}

.catRow {
  display: inline-flex;
  gap: 12rpx;
  padding-right: 12rpx;
}

.chip {
  padding: 12rpx 18rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  color: #111827;
  background: #f3f4f6;
}

.chipActive {
  color: #ffffff;
  background: #111827;
}

.seg {
  margin-top: 18rpx;
  padding: 6rpx;
  background: #f3f4f6;
  border-radius: 999rpx;
  display: flex;
  gap: 6rpx;
}

.segItem {
  flex: 1;
  text-align: center;
  padding: 14rpx 0;
  font-size: 26rpx;
  color: #111827;
  border-radius: 999rpx;
}

.segActive {
  background: #111827;
  color: #ffffff;
}

.content {
  padding: 0 24rpx;
}

.waterfall {
  display: flex;
  gap: 16rpx;
}

.col {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.itemCard {
  background: #ffffff;
  border-radius: 26rpx;
  overflow: hidden;
  border: 2rpx solid rgba(17, 24, 39, 0.06);
}

.media {
  position: relative;
  width: 100%;
  background: #e5e7eb;
}

.mediaImg {
  width: 100%;
  height: 100%;
}

.mediaShade {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 140rpx;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.55));
}

.badge {
  position: absolute;
  left: 14rpx;
  top: 14rpx;
  padding: 8rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #ffffff;
  background: rgba(17, 24, 39, 0.7);
  border: 2rpx solid rgba(255, 255, 255, 0.18);
}

.like {
  position: absolute;
  right: 12rpx;
  top: 12rpx;
  padding: 10rpx 12rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.88);
  border: 2rpx solid rgba(17, 24, 39, 0.06);
}

.likeIcon {
  font-size: 26rpx;
  color: #6b7280;
}

.likeIcon.liked {
  color: #ef4444;
}

.likeCount {
  font-size: 22rpx;
  color: #111827;
}

.meta {
  padding: 16rpx;
}

.title {
  font-size: 28rpx;
  font-weight: 700;
  color: #111827;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.sub {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  color: #6b7280;
  padding: 6rpx 10rpx;
  background: #f3f4f6;
  border-radius: 999rpx;
}

.price {
  font-size: 24rpx;
  color: #111827;
  font-weight: 700;
}

.empty {
  margin: 40rpx 0 20rpx;
  background: #ffffff;
  border-radius: 28rpx;
  padding: 36rpx;
  border: 2rpx solid rgba(17, 24, 39, 0.06);
}

.emptyArt {
  height: 140rpx;
  position: relative;
}

.emptyBlob {
  width: 120rpx;
  height: 120rpx;
  border-radius: 40rpx;
  background: #f3f4f6;
}

.emptyLine {
  position: absolute;
  left: 140rpx;
  top: 18rpx;
  right: 0;
  height: 22rpx;
  border-radius: 999rpx;
  background: #f3f4f6;
}

.emptyLine.small {
  top: 58rpx;
  right: 120rpx;
}

.emptyTitle {
  margin-top: 18rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.emptyDesc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.emptyBtn {
  margin-top: 18rpx;
  display: inline-flex;
  padding: 14rpx 20rpx;
  border-radius: 999rpx;
  background: #111827;
  color: #ffffff;
  font-size: 26rpx;
}

.skCard {
  border-radius: 26rpx;
  border: 2rpx solid rgba(17, 24, 39, 0.06);
  background: linear-gradient(90deg, #f3f4f6 0%, #e5e7eb 50%, #f3f4f6 100%);
  background-size: 400% 100%;
  animation: shimmer 1.2s linear infinite;
}

@keyframes shimmer {
  0% {
    background-position: 100% 0;
  }
  100% {
    background-position: 0 0;
  }
}

.bottomSpacer {
  height: 160rpx;
}
