.page {
  min-height: 100vh;
  background: #ffffff;
}

.content {
  padding: 0 28rpx;
  padding-bottom: calc(28rpx + 108rpx + env(safe-area-inset-bottom));
}

.hero {
  position: relative;
  height: 360rpx;
  overflow: hidden;
}

.heroBg {
  position: absolute;
  inset: 0;
  background: radial-gradient(120% 120% at 20% 20%, rgba(17, 24, 39, 0.05) 0%, rgba(17, 24, 39, 0) 55%),
    linear-gradient(180deg, #fff4ea 0%, #ffffff 75%);
}

.heroInner {
  position: absolute;
  left: 0;
  right: 0;
  top: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 999rpx;
  background: #ffffff;
  border: 1rpx solid rgba(17, 24, 39, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  font-weight: 900;
  color: #111827;
  box-shadow: 0 18rpx 40rpx rgba(17, 24, 39, 0.08);
}

.heroTitle {
  margin-top: 18rpx;
  font-size: 40rpx;
  font-weight: 900;
  color: #111827;
}

.heroSub {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.stats {
  margin-top: -44rpx;
  background: #ffffff;
  border-radius: 18rpx;
  border: 1rpx solid rgba(17, 24, 39, 0.08);
  display: flex;
  overflow: hidden;
}

.stat {
  flex: 1;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.num {
  font-size: 30rpx;
  font-weight: 900;
  color: #111827;
}

.label {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.grid2 {
  margin-top: 18rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 14rpx;
}

.tile {
  position: relative;
  background: #ffffff;
  border-radius: 18rpx;
  border: 1rpx solid rgba(17, 24, 39, 0.08);
  padding: 18rpx;
  overflow: hidden;
}

.tileTitle {
  font-size: 28rpx;
  font-weight: 900;
  color: #111827;
}

.tileSub {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.pill {
  position: absolute;
  right: 14rpx;
  top: 14rpx;
  padding: 8rpx 12rpx;
  border-radius: 999rpx;
  background: #111827;
  color: #ffffff;
  font-size: 20rpx;
  font-weight: 700;
}

.actions {
  margin-top: 18rpx;
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.action {
  flex: 1;
  background: #ffffff;
  border-radius: 18rpx;
  border: 1rpx solid rgba(17, 24, 39, 0.08);
  padding: 18rpx 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.ico {
  font-size: 34rpx;
  color: #111827;
  opacity: 0.9;
}

.txt {
  margin-top: 10rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #111827;
}

.floating {
  position: fixed;
  right: 18rpx;
  bottom: calc(140rpx + env(safe-area-inset-bottom));
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.fab {
  width: 120rpx;
  background: rgba(255, 255, 255, 0.92);
  border: 1rpx solid rgba(17, 24, 39, 0.08);
  border-radius: 999rpx;
  padding: 12rpx 14rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 18rpx 40rpx rgba(17, 24, 39, 0.08);
}

.fabIco {
  font-size: 26rpx;
  color: #111827;
}

.fabTxt {
  margin-top: 6rpx;
  font-size: 20rpx;
  color: #111827;
  opacity: 0.75;
}
