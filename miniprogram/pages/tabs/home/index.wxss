.page {
  height: 100vh;
  background: #ffffff;
}

.stack {
  height: calc(100vh - 108rpx - env(safe-area-inset-bottom));
  padding: 28rpx;
  display: flex;
  flex-direction: column;
  gap: 22rpx;
  box-sizing: border-box;
}

.card {
  position: relative;
  flex: 1;
  min-height: 180rpx;
  border-radius: 26rpx;
  overflow: hidden;
  background: #ffffff;
  border: 1rpx solid rgba(17, 24, 39, 0.08);
}

.cardBg {
  position: absolute;
  inset: 0;
  background: radial-gradient(120% 120% at 12% 20%, rgba(17, 24, 39, 0.06) 0%, rgba(17, 24, 39, 0) 55%),
    radial-gradient(120% 120% at 92% 80%, rgba(17, 24, 39, 0.05) 0%, rgba(17, 24, 39, 0) 60%);
}

.cardContent {
  position: absolute;
  left: 28rpx;
  top: 50%;
  transform: translateY(-50%);
}

.title {
  font-size: 38rpx;
  font-weight: 800;
  color: #111827;
  letter-spacing: 0.2rpx;
}

.sub {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.chev {
  position: absolute;
  right: 26rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 56rpx;
  color: rgba(17, 24, 39, 0.25);
}
