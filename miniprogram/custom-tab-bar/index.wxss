.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  border-top: 1rpx solid rgba(17, 24, 39, 0.06);
}

.tabbarInner {
  display: flex;
  height: 108rpx;
}

.tabItem {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #6b7280;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 999rpx;
  background: transparent;
  margin-bottom: 10rpx;
}

.label {
  font-size: 24rpx;
  font-weight: 600;
  line-height: 1;
}

.active {
  color: #111827;
}

.active .dot {
  background: #111827;
}

.safe {
  height: env(safe-area-inset-bottom);
}

